<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog
		id="createDialog"
		title="{i18n>dialog.title}"
		draggable="true"
		resizable="true">
		<content>
			<VBox class="sapUiMediumMargin" justifyContent="Center" alignItems="Center">
				<Label text="{i18n>dialog.lProductID}" />
				<Input id="dProductId" />
				<Label text="{i18n>dialog.lProductName}" />
				<Input id="dProductName" />
				<Label text="{i18n>dialog.lProductPrice}" />
				<Input id="dProductPrice" />
				<Label text="{i18n>dialog.lProductStock}" />
				<Input id="dProductStock" />
			</VBox>
		</content>
		<beginButton>
			<Button text="{i18n>dialog.bSave}" type="Accept" press="onItemSaved" />
		</beginButton>
		<endButton>
			<Button text="{i18n>dialog.bCancel}" type="Reject" press="onCancel" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>